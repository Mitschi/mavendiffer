	<artifactId>spring-roo-bootstrap</artifactId>
	<packaging>jar</packaging>
	<name>Spring Roo - Bootstrap</name>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<property environment="env" />
								<echo
									message="Cached ROO classpath file will be written to '${env.ROO_CLASSPATH_FILE}'" />
								<property refid="maven.compile.classpath" name="the_cp" />
								<dirname property="output.dir" file="${env.ROO_CLASSPATH_FILE}" />
								<echo
									message="Cached ROO classpath file will be be created in '${output.dir}'" />
								<mkdir dir="${output.dir}" />
								<echo file="${env.ROO_CLASSPATH_FILE}" append="false">${the_cp}</echo>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
